<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dim_20_dp">

    <com.lime.android.ui.customview.robototextview.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_pick_date"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dim_15_sp"
        android:layout_marginTop="@dimen/spacing_10_dp"
        android:layout_gravity="center_horizontal"
        app:tv_fontName="lato_bold.ttf"/>

    <com.lime.android.ui.customview.robototextview.RobotoTextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_45_dp"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/dd_mm_yy"
        android:textColorHint="@color/icon_tint_color"
        android:gravity="center_vertical"
        android:textSize="@dimen/dim_15_sp"
        android:textColor="@color/colorPrimary"
        android:drawablePadding="@dimen/spacing_5_dp"
        android:drawableStart="@drawable/ic_calendar_icon"
        android:layout_marginTop="@dimen/spacing_5_dp"
        android:paddingStart="@dimen/spacing_10_dp"
        app:et_fontName="lato_regular.ttf"/>


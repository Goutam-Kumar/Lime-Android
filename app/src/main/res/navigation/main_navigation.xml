<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment"
    tools:ignore="UnusedNavigation">
    <fragment
        android:id="@+id/mainFragment"
        android:label="@string/app_name"
        android:name="com.lime.android.fragments.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_mainFragment_to_truckListFragment"
            app:destination="@id/truckListFragment" />
    </fragment>
    <fragment
        android:id="@+id/truckListFragment"
        android:name="com.lime.android.fragments.trucklist.TruckListFragment"
        android:label="TruckListFragment"
        tools:layout="@layout/fragment_truck_list"/>
</navigation>
